<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <label class="navbar-brand">Places</label>
  <div class="collapse navbar-collapse"></div>
    <div class="form-inline my-2 my-lg-0">
      <a class="btn btn-outline-secondary my-2 my-sm-0" href="<%= root_path %>">Search</a>
    </div>
</nav>
<p id="notice"><%= notice %></p>

<h2>List of Added Places</h2>

<div id="accordion">
  <% @places.each_with_index do |place,index| %>
    <div class="card">
      <div class="card-header">
        <a class="<%= index!=0 ? 'collapsed' : '' %> card-link" data-toggle="collapse" href="#collapse<%= place.id %>">
          <%= place.place_name %>
          <small id="emailHelp" class="form-text text-muted"><%= "#{place.street_no} #{place.street}, #{place.city}" %></small>
        </a>
      </div>
      <div id="collapse<%= place.id %>" class="collapse <%= index==0 ? 'show' : '' %>" data-parent="#accordion">
        <div class="card-body">
          <% place.open_hours.each do |day| %>
            <% f_day = day.split(":",2) %>
            <div class="d-flex justify-content-between">
              <div>
               <%= f_day[0] %>
              </div>
              <div>
               <%= f_day[1] %>
              </div>
            </div>
          <% end %>
          <%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
